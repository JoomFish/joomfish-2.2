<?xml version="1.0" encoding="UTF-8"?>
<install type="module" client="administrator"  version="1.5.0" position="status">
	<name>Direct Translation</name>
	<author>Joom!Fish Project</author>
	<creationDate>2012-01-20</creationDate>
	<copyright>2003 - 2012, Think Network GmbH, Munich. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/old-licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@joomfish.net</authorEmail>
	<authorUrl>www.joomfish.net</authorUrl>
	<version>2.2.3</version>
	<description>This module provides a direct link JoomFish translations for selected item. Remember to publish this module to status position.</description>
	<files>
		<filename module="mod_translate">mod_translate.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>elements</folder>
		<folder>tmpl</folder>
	</files>
	<params addpath="/administrator/modules/mod_translate/elements">
        <param name="linktype" type="radio" default="squeezebox" label="How to open translation">
             <option value="squeezebox">Modal Window</option>
             <option value="newwindow">Popup Window</option>
             <option value="samewindow">Same Window</option>
        </param>
		<param name="components" type="dtcomps" rows="50" cols="50" default="" label="Components" description="Component parameters - separated with a space." />
	</params>
</install>
