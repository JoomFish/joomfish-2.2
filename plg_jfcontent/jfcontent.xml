<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="plugin" group="search">
	<name>Search - Joomfish Content</name>
	<author>Joom!Fish Project</author>
	<creationDate>2012-01-20</creationDate>
	<copyright>Copyright (C) 2003 - 2012, Think Network GmbH, Munich. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@joomfish.net</authorEmail>
	<authorUrl>http://www.joomfish.net</authorUrl>
	<version>2.2.3</version>
	<description>ALLOWS SEARCHING OF TRANSLATIONS OF ALL ARTICLES</description>
	<files>
		<filename plugin="jfcontent">jfcontent.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="search_content" type="radio" default="1" label="Content Items" description="Search Content Items?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_uncategorised" type="radio" default="1" label="Uncategorised Content" description="Search Uncategorised Content?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_archived" type="radio" default="1" label="Archived Content" description="Search Archived Content?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="active_language_only" type="radio" default="0" label="Active language only" description="Search only within active language?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>